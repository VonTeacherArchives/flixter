<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div id="flex-content-container">

      <div class="container">

        <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
          <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#flix-cap-toggle" aria-controls="flix-cap-toggle" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <%= link_to root_path do %>
          <h1 class="navbar-brand mb-0">Flix-Capacitor</h1>
          <% end %>
          <div class="collapse navbar-collapse" id="flix-cap-toggle">
            <div class="navbar-nav mr-auto">
              <a class="nav-item nav-link" href="#">See All Courses</a>
            </div>

            <%= render 'layouts/user_nav' %>

          </div>
        </nav>


        <%= render "layouts/flash" %>

        <%= yield %>

      </div>

    </div>

    <div id="footer">
      <div class="container">
      <span class="footer-lead">Teachers</span>
      <%= link_to 'Teach a Course', new_instructor_course_path %>
      </div>
    </div>

  </body>

</html>

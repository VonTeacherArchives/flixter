<div class="container bg-gold">
  <div class="col-10 offset-1">
    <br />
    <h2 class="text-center">Welcome to the Journey</h2>
    <br />
    <% @courses.each do |course| %>
      <h3>
        <%= link_to course.title, course_path(course), class: 'course-title' %>
      </h3>
      <div class="row">
        <div class="col-sm-4 col-12 text-center">

          <%= link_to course_path(course) do %>
          <div>
            <%= image_tag course.image, class: 'img-fluid course-image-border-shadow margin-below-course-image' %>
            <% if course.image.present? %>
            <h4 class="h4-image-overlay"><span>View Course</span></h4>
            <% end %>
          </div>
          <button class="btn btn-course btn-large">Details</button>
          <!-- <%= link_to 'Details', course_path(course), class: 'btn btn-course btn-large' %> -->

          <% end %>

        </div>
        <div class="col-sm-8 col-12">
          <%= course.description %>
          <span class="badge badge-pill badge-default">
<!-- Condition to display FREE or course.cost -->
          <% if course.cost == 0 %>
            FREE
          <% else %>
            <%= "#{number_to_currency course.cost}" %>
          <% end %>
<!-- END Condition -->
          </span>
        </div>
        <hr />
      </div>
      <hr />
      <div class="clr"></div>
    <% end %>
    <br />
  </div>
</div>
